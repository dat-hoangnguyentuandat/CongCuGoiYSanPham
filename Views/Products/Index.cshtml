@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-filter me-2"></i>Bộ lọc
                    </h5>
                </div>
                <div class="card-body p-4">
                    <h6 class="fw-bold text-primary mb-3">Danh mục</h6>
                    <div id="categoryFilter" class="mb-4">
                        <!-- Categories will be loaded here -->
                    </div>
                    
                    <hr class="my-4">
                    
                    <h6 class="fw-bold text-primary mb-3">Khoảng giá</h6>
                    <div class="mb-3">
                        <input type="text" class="form-control rounded-pill mb-3" id="minPrice" placeholder="Từ (VD: 1.000.000)">
                        <input type="text" class="form-control rounded-pill" id="maxPrice" placeholder="Đến (VD: 5.000.000)">
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary rounded-pill hover-lift" onclick="applyFilters()">
                            <i class="fas fa-check me-2"></i>Áp dụng
                        </button>
                        <button class="btn btn-outline-secondary rounded-pill hover-lift" onclick="clearFilters()">
                            <i class="fas fa-times me-2"></i>Xóa bộ lọc
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="card shadow-sm border-0 rounded-4 mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0 fw-bold text-primary">
                            <i class="fas fa-shopping-bag me-2"></i>Tất cả sản phẩm
                        </h3>
                        <div class="input-group" style="max-width: 400px;">
                            <input type="text" class="form-control rounded-start-pill" id="searchInput" placeholder="Tìm kiếm...">
                            <button class="btn btn-primary rounded-end-pill hover-lift" onclick="searchProducts()">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row" id="productsList">
                <div class="col-12 text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3 text-muted">Đang tải sản phẩm...</p>
                </div>
            </div>
            
            <!-- Pagination -->
            <nav aria-label="Page navigation" class="mt-5">
                <ul class="pagination justify-content-center" id="pagination">
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .hover-lift {
            transition: all 0.3s ease;
        }
        
        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }
        
        .card {
            transition: all 0.3s ease;
            border: none;
        }
        
        .rounded-4 {
            border-radius: 1rem !important;
        }
        
        .rounded-pill {
            border-radius: 50rem !important;
        }
        
        .text-primary {
            color: #667eea !important;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }
        
        .btn-primary:hover {
            background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
        }
        
        .bg-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        }
        
        .badge {
            font-weight: 500;
        }
        
        .spinner-border {
            width: 3rem;
            height: 3rem;
        }
    </style>
    
    <script>
        let currentPage = 1;
        let selectedCategory = null;

        async function loadProducts(page = 1, search = '') {
            try {
                let url = `/api/products?page=${page}&pageSize=12`;
                if (search) url += `&search=${encodeURIComponent(search)}`;
                if (selectedCategory) url += `&categoryId=${selectedCategory}`;
                
                // Add price filter parameters
                const minPriceInput = document.getElementById('minPrice').value.trim();
                const maxPriceInput = document.getElementById('maxPrice').value.trim();
                
                const minPriceValue = parsePriceInput(minPriceInput);
                if (minPriceValue !== null && minPriceValue >= 0) {
                    url += `&minPrice=${minPriceValue}`;
                }
                
                const maxPriceValue = parsePriceInput(maxPriceInput);
                if (maxPriceValue !== null && maxPriceValue >= 0) {
                    url += `&maxPrice=${maxPriceValue}`;
                }
                
                const response = await fetch(url);
                const products = await response.json();
                
                displayProducts(products);
                currentPage = page;
            } catch (error) {
                console.error('Error loading products:', error);
                document.getElementById('productsList').innerHTML = '<div class="col-12"><p class="text-center text-danger">Lỗi tải sản phẩm</p></div>';
            }
        }

        function displayProducts(products) {
            const productsHtml = products.map(product => `
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 rounded-4 hover-lift">
                        <img src="${product.imageUrl || '/images/placeholder.jpg'}" class="card-img-top rounded-top-4" alt="${product.name}" style="height: 250px; object-fit: cover;">
                        <div class="card-body p-4">
                            <span class="badge bg-primary rounded-pill mb-3">${product.categoryName}</span>
                            <h5 class="card-title fw-bold mb-3">${product.name}</h5>
                            <p class="card-text text-muted small mb-3">${product.description ? product.description.substring(0, 100) + '...' : ''}</p>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <span class="text-danger fw-bold fs-5">${formatPrice(product.minPrice)}</span>
                                    ${product.maxPrice > product.minPrice ? `<br><small class="text-muted">đến ${formatPrice(product.maxPrice)}</small>` : ''}
                                </div>
                                <div class="text-end">
                                    <div class="text-warning">
                                        <i class="fas fa-star"></i>
                                        <span class="fw-bold">${product.averageRating.toFixed(1)}</span>
                                    </div>
                                    <small class="text-muted">${product.reviewCount} đánh giá</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 p-4 pt-0">
                            <a href="/Products/Detail/${product.id}" class="btn btn-primary w-100 rounded-pill hover-lift">
                                <i class="fas fa-eye me-2"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            `).join('');
            
            document.getElementById('productsList').innerHTML = productsHtml || '<div class="col-12 text-center py-5"><div class="text-muted"><i class="fas fa-search fa-3x mb-3"></i><h4>Không tìm thấy sản phẩm</h4><p>Thử thay đổi từ khóa tìm kiếm hoặc bộ lọc</p></div></div>';
        }

        function searchProducts() {
            const search = document.getElementById('searchInput').value;
            loadProducts(1, search);
        }

        function applyFilters() {
            const minPriceInput = document.getElementById('minPrice').value.trim();
            const maxPriceInput = document.getElementById('maxPrice').value.trim();
            
            const minPrice = parsePriceInput(minPriceInput);
            const maxPrice = parsePriceInput(maxPriceInput);
            
            // Validate that price values are valid numbers if provided
            if ((minPriceInput && minPrice === null) || (maxPriceInput && maxPrice === null)) {
                alert('Vui lòng nhập giá trị số hợp lệ cho khoảng giá');
                return;
            }
            
            // If min price is greater than max price, show warning
            if (minPrice !== null && maxPrice !== null && minPrice > maxPrice) {
                alert('Giá trị tối thiểu không được lớn hơn giá trị tối đa');
                return;
            }
            
            loadProducts(1, document.getElementById('searchInput').value);
        }

        function clearFilters() {
            selectedCategory = null;
            document.getElementById('searchInput').value = '';
            document.getElementById('minPrice').value = '';
            document.getElementById('maxPrice').value = '';
            loadProducts(1);
        }

        function formatPrice(price) {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(price);
        }

        // Format number with thousand separators (dots)
        function formatNumberInput(value) {
            // Remove all non-digit characters
            const numbers = value.replace(/[^\d]/g, '');
            if (!numbers) return '';
            
            // Add dots as thousand separators
            return numbers.replace(/\B(?=(\d{3})+(?!\d))/g, '.');
        }

        // Parse price input (remove dots and convert to number)
        function parsePriceInput(value) {
            if (!value) return null;
            // Remove all dots and convert to number
            const cleaned = value.replace(/\./g, '');
            const num = parseFloat(cleaned);
            return isNaN(num) ? null : num;
        }

        // Add event listeners for price input formatting
        const minPriceInput = document.getElementById('minPrice');
        const maxPriceInput = document.getElementById('maxPrice');

        if (minPriceInput) {
            minPriceInput.addEventListener('input', function(e) {
                const cursorPosition = e.target.selectionStart;
                const oldValue = e.target.value;
                const newValue = formatNumberInput(oldValue);
                
                if (oldValue !== newValue) {
                    e.target.value = newValue;
                    // Restore cursor position
                    const diff = newValue.length - oldValue.length;
                    e.target.setSelectionRange(cursorPosition + diff, cursorPosition + diff);
                }
            });
        }

        if (maxPriceInput) {
            maxPriceInput.addEventListener('input', function(e) {
                const cursorPosition = e.target.selectionStart;
                const oldValue = e.target.value;
                const newValue = formatNumberInput(oldValue);
                
                if (oldValue !== newValue) {
                    e.target.value = newValue;
                    // Restore cursor position
                    const diff = newValue.length - oldValue.length;
                    e.target.setSelectionRange(cursorPosition + diff, cursorPosition + diff);
                }
            });
        }

        // Load initial data
        loadProducts();

        // Search on Enter
        document.getElementById('searchInput')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') searchProducts();
        });
    </script>
}
