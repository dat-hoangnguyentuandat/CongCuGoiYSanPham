@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<div class="hero-section-fullwidth text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-4 fw-bold mb-4 animate-fade-in">Chào mừng đến với Shop!</h1>
                    <p class="lead mb-4 animate-fade-in-delay">Khám phá hàng ngàn sản phẩm chất lượng với giá tốt nhất. Mua sắm dễ dàng, giao hàng nhanh chóng.</p>
                    <div class="d-flex gap-3 animate-fade-in-delay-2">
                        <a class="btn btn-light btn-lg px-4 shadow-sm hover-lift" href="/Products" role="button">
                            Mua sắm ngay
                        </a>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-outline-light btn-lg px-4 hover-lift" href="/Identity/Account/Register" role="button">
                                Đăng ký
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-icon animate-float">
                    <div class="hero-graphic">
                        <div class="shop-icon">🛍️</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Search Bar -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-white border-end-0 rounded-start-4">
                            <i class="fas fa-search text-primary"></i>
                        </span>
                        <input type="text" class="form-control border-start-0 border-end-0" id="searchInput" placeholder="Tìm kiếm sản phẩm...">
                        <button class="btn btn-primary px-4 rounded-end-4 shadow-sm" onclick="searchProducts()">
                            Tìm kiếm
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="mb-0 fw-bold">
                    <i class="fas fa-th-large me-2 text-primary"></i>Danh mục sản phẩm
                </h3>
            </div>
            <div id="categoriesList" class="d-flex gap-3 flex-wrap">
                <!-- Categories will be loaded here -->
            </div>
        </div>
    </div>

    <!-- Featured Products -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="mb-0 fw-bold">
                    <i class="fas fa-fire me-2 text-danger"></i>Sản phẩm nổi bật
                </h3>
                <a href="/Products" class="btn btn-outline-primary rounded-pill px-4 hover-lift">
                    Xem tất cả <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="row" id="productsList">
        <!-- Products will be loaded here -->
    </div>

    <!-- AI Suggestions -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="mb-0 fw-bold">
                    <i class="fas fa-magic me-2 text-success"></i>Gợi ý cho bạn
                </h3>
            </div>
        </div>
    </div>
    <div class="row" id="suggestionsList">
        <!-- Suggestions will be loaded here -->
    </div>
</div>

<style>
    .hero-section-fullwidth {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        position: relative;
        overflow: hidden;
        margin-left: calc(-50vw + 50%);
        margin-right: calc(-50vw + 50%);
        width: 100vw;
    }
    
    .hero-section-fullwidth::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.1;
    }
    
    .min-vh-50 {
        min-height: 50vh;
    }
    
    .hero-graphic {
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
        width: 200px;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255,255,255,0.2);
    }
    
    .shop-icon {
        font-size: 5rem;
        filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
    }
    
    .card {
        transition: all 0.3s ease;
        border: none;
    }
    
    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }
    
    .btn {
        transition: all 0.3s ease;
        border-radius: 0.5rem;
    }
    
    .hover-lift:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    .rounded-4 {
        border-radius: 1rem !important;
    }
    
    .rounded-pill {
        border-radius: 50rem !important;
    }
    
    .animate-fade-in {
        animation: fadeIn 0.8s ease-out;
    }
    
    .animate-fade-in-delay {
        animation: fadeIn 0.8s ease-out 0.2s both;
    }
    
    .animate-fade-in-delay-2 {
        animation: fadeIn 0.8s ease-out 0.4s both;
    }
    
    .animate-float {
        animation: float 3s ease-in-out infinite;
    }
    
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-20px);
        }
    }
    
    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0,0,0,0.175) !important;
    }
    
    .text-primary {
        color: #667eea !important;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
        transform: translateY(-1px);
    }
    
    .btn-outline-primary {
        border-color: #667eea;
        color: #667eea;
    }
    
    .btn-outline-primary:hover {
        background: #667eea;
        border-color: #667eea;
    }
</style>

@section Scripts {
    <script>
        // Load categories
        async function loadCategories() {
            try {
                const response = await fetch('/api/products');
                const products = await response.json();
                
                // Extract unique categories
                const categories = [...new Set(products.map(p => p.categoryName))];
                
                const categoriesHtml = categories.map(cat => `
                    <button class="btn btn-outline-primary rounded-pill px-4 hover-lift" onclick="filterByCategory('${cat}')">
                        ${cat}
                    </button>
                `).join('');
                
                document.getElementById('categoriesList').innerHTML = categoriesHtml;
            } catch (error) {
                console.error('Error loading categories:', error);
            }
        }

        // Load products
        async function loadProducts(search = '', categoryId = null) {
            try {
                let url = '/api/products?pageSize=8';
                if (search) url += `&search=${encodeURIComponent(search)}`;
                if (categoryId) url += `&categoryId=${categoryId}`;
                
                const response = await fetch(url);
                const products = await response.json();
                
                const productsHtml = products.map(product => `
                    <div class="col-md-3 mb-4">
                        <div class="card h-100 shadow-sm border-0 rounded-4 hover-lift">
                            <img src="${product.imageUrl || '/images/placeholder.jpg'}" class="card-img-top rounded-top-4" alt="${product.name}" style="height: 200px; object-fit: cover;">
                            <div class="card-body p-4">
                                <h5 class="card-title fw-bold">${product.name}</h5>
                                <p class="card-text text-muted small mb-2">${product.categoryName}</p>
                                <p class="card-text text-secondary">${product.description ? product.description.substring(0, 80) + '...' : ''}</p>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-danger fw-bold fs-5">${formatPrice(product.minPrice)}</span>
                                    <div class="text-end">
                                        <div class="text-warning">
                                            <i class="fas fa-star"></i>
                                            <span class="fw-bold">${product.averageRating.toFixed(1)}</span>
                                        </div>
                                        <small class="text-muted">(${product.reviewCount})</small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-0 p-4 pt-0">
                                <a href="/Products/Detail/${product.id}" class="btn btn-primary w-100 rounded-pill hover-lift">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                `).join('');
                
                document.getElementById('productsList').innerHTML = productsHtml || '<div class="col-12"><p class="text-center">Không tìm thấy sản phẩm</p></div>';
            } catch (error) {
                console.error('Error loading products:', error);
            }
        }

        // Load AI suggestions
        async function loadSuggestions() {
            try {
                const response = await fetch('/api/ai/suggest');
                const products = await response.json();
                
                const suggestionsHtml = products.slice(0, 4).map(product => `
                    <div class="col-md-3 mb-4">
                        <div class="card h-100 shadow-sm border-0 rounded-4 hover-lift">
                            <img src="${product.imageUrl || '/images/placeholder.jpg'}" class="card-img-top rounded-top-4" alt="${product.name}" style="height: 200px; object-fit: cover;">
                            <div class="card-body p-4">
                                <h5 class="card-title fw-bold">${product.name}</h5>
                                <p class="card-text text-muted small mb-2">${product.categoryName}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-danger fw-bold fs-5">${formatPrice(product.minPrice)}</span>
                                    <div class="text-warning">
                                        <i class="fas fa-star"></i>
                                        <span class="fw-bold">${product.averageRating.toFixed(1)}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-0 p-4 pt-0">
                                <a href="/Products/Detail/${product.id}" class="btn btn-outline-primary w-100 rounded-pill hover-lift">Xem ngay</a>
                            </div>
                        </div>
                    </div>
                `).join('');
                
                document.getElementById('suggestionsList').innerHTML = suggestionsHtml;
            } catch (error) {
                console.error('Error loading suggestions:', error);
            }
        }

        function searchProducts() {
            const search = document.getElementById('searchInput').value;
            loadProducts(search);
        }

        function filterByCategory(categoryName) {
            loadProducts('', null); // You can enhance this to filter by category
        }

        function formatPrice(price) {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(price);
        }

        // Load data on page load
        loadCategories();
        loadProducts();
        loadSuggestions();

        // Search on Enter key
        document.getElementById('searchInput')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchProducts();
            }
        });
    </script>
}
